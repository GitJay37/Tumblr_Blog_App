<h1>
    <%= @post.title %>
</h1>

<p>
    Enviado <%= time_ago_in_words(@post.created_at) %>
    <br>
    <% if user_signed_in?%>
        <button class='btn btn-outline-info btn-sm'> 
            <%= link_to 'Editar', edit_post_path(@post) %> 
        </button>
        <button class='btn btn-outline-danger btn-sm'>
            <%= link_to 'Eliminar', post_path(@post), method: :delete, data: { confirm: 'Estás seguro de eliminar esto?'} %>
        </button>
    <% end %>
</p>

<p>
    <%= @post.body %>
</p>

<div>
    <h2> Comentarios: <%= @post.comments.count %></h2>
    <%= render @post.comments %>

    <h3> Unete a la discusión </h3>
    <%= render "comments/form" %>
</div>