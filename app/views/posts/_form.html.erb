
<%= form_for @post do |form| %>
    <% if @post.errors.any? %>
        <div>
        <h2> <%= pluralize(@post.errors.count, 'error') %> Post detenido </h2>
            <ul>  
            <% @post.errors.full_messages.each do |msg| %>
                <li>  <%= msg %> </li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title, class: "form-control" %>
    </p>
    
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body, class: "form-control" %>
    </p>
    
    <p>
        <%= form.submit 'Save Post', class: "btn btn-primary btn-md btn-block" %>
    </p>
<% end %>

